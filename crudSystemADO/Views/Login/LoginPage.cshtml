@model crudSystemADO.Models.LoginPage

@{
    ViewData["Title"] = "LoginPage";
}

<section class="body d-flex justify-content-center align-items-center">
    <div class="mainDiv bg-white border-3 shadow rounded-3 w-50 p-2">
        <div class="m-3 text-center">
            <h1 class="mb-2"><b>Login</b></h1>
            <p class="text-muted">Enter your email or password to login</p>
        </div>
        
        <form asp-action="LoginPage" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating m-3">
                <input type="email"
                       class="form-control"
                       asp-for="Email"
                       placeholder="name@example.com" />
                <label asp-for="Email">Email address</label>
                <label asp-for="Email" class="control-label"></label>
            </div>
            <div class="form-floating m-3">
                
                <input type="password"
                       class="form-control"
                       asp-for="Password"
                       placeholder="Password" />
                <label asp-for="Password">Password</label>
                <label asp-for="Password" class="control-label"></label>
            </div>
            <div class="d-flex justify-content-center mb-3">
                <button type="submit"
                        class="rounded-3 btn btn-login w-100 ms-3 me-3"
                        >
                    <b> Login</b>
                </button>
                
            </div>
            
            <div class="d-flex justify-content-center mb-3">
                
                <a class="btn btn-primary" target="_self" asp-action="GoogleLogin" asp-controller="Login">Google Signin</a>
                
            </div>

            <div class="d-flex justify-content-center mb-4">
                Not a member?
                <a target="_self" href="" class="ms-1 link-info">SignUp Now</a>
            </div>
        </form>
    </div>
</section>
